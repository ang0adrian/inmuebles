<%- include('./partials/cabecera'); %>
    <%- include('./partials/menu'); %>
        <div class="container">
            <div class="row">
                <!-- Card Projects -->
                <div class="col-md-10 col-md-offset-1">
                    <div class="card">
                        <div class="card-image">
                            <img class="" width="100%" style="max-height: 500px" src="<%= inmueble.imagen %>">
                            <span class="card-title">
                                <h2>Detalles del inmueble</h2>
                            </span>
                        </div>

                        <div class="card-content">
                            <label for="Descripcion">Descripcion :</label>
                            <p>
                                <%= inmueble.descripcion %>.</p>
                            <label for="Habitaciones">Numero de habitaciones :</label>
                            <p>
                                <%= inmueble.numeroHabitaciones %>.</p>
                            <label for="Superficie">Superficie :</label>
                            <p>
                                <%= inmueble.superficie %>.</p>
                            <label for="Precio">Precio :</label>
                            <p>
                                <%= inmueble.precio %>.</p>
                            <label for="Tipo">Tipo de inmueble :</label>
                            <p>
                                <%= inmueble.tipo.nombre %>.</p>
                        </div>

                        <div class="card-action">
                            <!-- <button type="button" class="btn btn-danger" onclick="eliminarInmueble('/inmuebles/<%= inmueble.id %>')">Eliminar Inmueble</button> -->
                            <button type="submit" onclick='borrarInmueble(this)' id="<%=inmueble.id%>" class="btn btn-danger mb-2">Borrar</button>

                        </div>
                        <br>
                        <div class="alert alert-danger invisible" id="padre_contenedor_errores_borrar">
                            <strong>Error!</strong>
                            <span id="contenedor_errores_borrar"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./partials/pie'); %>