<%- include('./partials/cabecera'); %>
    <%- include('./partials/menu'); %>
        <div class="jumbotron">
            <div class="container">
                <h2 class="display-3">Filtros de busqueda :</h2>
            </div>
            <div class="container">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Numero de habitaciones</label>
                    <input type="number" onchange="cambiarHabitaciones()" id="habitaciones" name="habitaciones" class="form-control" placeholder="0">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Superficie (
                        <b>m2</b>)</label>
                    <input type="number" onchange="cambiarSuperficie()" id="superficie" name="superficie" class="form-control" placeholder="0">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Precio Inmueble (€)</label>
                    <input type="number" onchange="cambiarFiltroPercio()" id="precio" name="precio" class="form-control" placeholder="0">
                </div>
                <a href="/inmuebles/all/all/all" id="filtros_inmuebles">
                    <button type="submit" class="btn btn-primary mb-2">Filtrar</button>
                </a>
            </div>
        </div>
        <% if (inmuebles.length === 0) { %>
            <div class="alert alert-warning">
                <strong>Alerta!</strong> No hay resultados con las caracteristicas especificadas.
            </div>

            <% } %>

                <%   
            inmuebles.forEach(inmueble => { 
                %>
                    <div class="col-xs-12 col-md-6 col-lg-3">
                        <div class="card">
                            <img class="card-img-top" src="<%= inmueble.imagen %>" alt="Card image cap" height="250px" width="275px">
                            <div class="card-block">
                                <p class="card-text">
                                    Descripción :
                                    <br>
                                    <%= inmueble.descripcion %>
                                </p>
                                <p class="card-text">Numero de habitaciones :
                                    <b>
                                        <%= inmueble.numeroHabitaciones %>
                                    </b>
                                </p>
                                <p class="card-text">Superficie :
                                    <b>
                                        <%= inmueble.superficie %> m2
                                    </b>
                                </p>
                                <p class="card-text">Precio :
                                    <b>
                                        <%= inmueble.precio %>
                                    </b>€</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Tipo de inmueble :
                                    <%= inmueble.tipo.nombre %>
                                </small>
                            </div>
                            <a href="/inmuebles/info/<%= inmueble.id%>">
                                <button type="submit" class="btn btn-primary mb-2">Mas Información</button>
                            </a>
                        </div>
                    </div>
                    <%
                }); 
            %>
                        </main>
                        <%- include('./partials/pie'); %>